#############################################
# Backend Environment Template (.env.example)
# Kopiere diese Datei zu `.env` für lokale Entwicklung
# Produktionswerte werden über DOTENV_VAULT / Railway gesetzt
#############################################

# Server
NODE_ENV=development
PORT=5000
DATABASE_MODE=local

# MongoDB
MONGODB_URI=mongodb://localhost:27017/gluecksmomente
# Für Produktion nutzt der Server automatisch MONGODB_URI_PROD aus Vault/Railway
MONGODB_URI_PROD=

# Authentifizierung
JWT_SECRET=changeme-dev-secret
JWT_EXPIRE=7d
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=dev-password

# CORS / Frontend
FRONTEND_URL=http://localhost:3000

# Optionale E-Mail-Konfiguration
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=

# Upload Limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads